<div class="row">
    <div class="col-7" style="margin-top: 15px;">
        <h3>Listado Novedades</h3>
    </div>
    <div class="col" style="text-align: right;">
        <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fa fa-plus"></i>Nuevo</a>
    </div>

    <div class="col-3 text-right">
        <form class="form-inline" action="/admin/novedades" method="get">
        <input class="form-control" type="serch" placeholder="Buscar" aria-label="search" name="q" {{#if q}} value="{{q}}" {{/if}}>
        <button class="btn btn secondary my-2 my-sm-0" type="submit">
            <i class="fa fa-search" aria-hidden="true"></i>
        </button>
        </form>
    </div>

</div>
{{!-- fin fila 2 --}}
{{!-- inicio fila 3 --}}

<div class="row" style="margin-top: 50px;">
    <div class="col">
        <table class="table ">
            <thead>
                <tr class="table-dark">
                    <th scope="col">#</th>
                    <th scope="col">Titulo</th>
                    <th scope="col">Imagen</th>
                    <th scope="col" style="text-align: right;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each novedades}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{titulo}}</td>
                    <td>{{{imagen}}}</td>
                    <td style="text-align: right;">
                        <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary"><i class="fas fa-pencil-alt"></i></a>
                        <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i class="fas fa-trash"></i></a>

                    </td>
                </tr>
             {{/each}}
            </tbody>
            </table>
            {{#if is_search}}
            {{#unless novedades.length}}
            No se encontraron resultados para "<b>{{q}}</b>"
            {{/unless}}
            {{/if}}
    </div>
</div>
{{!-- fin fila 3 --}}



</div>



